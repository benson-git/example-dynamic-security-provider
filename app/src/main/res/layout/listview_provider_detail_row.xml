<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/provider_detail_row_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="Cipher"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/provider_detail_row_algorithm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/provider_detail_row_type"
        tools:text="RSA/ECB/PKCS1Padding"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/provider_detail_row_classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/provider_detail_row_algorithm"
        tools:text="org.apache.harmony.xnet.provider.jsse.OpenSSLCipherRSA$PKCS1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="start"
        android:singleLine="true" />
</RelativeLayout>